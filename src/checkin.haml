						%td
							%input(type="date" name="payrefno3" value="2020-01-01")
					%tr
						%td 信用卡授權碼
						%td
							%input(name="payrefno4" value="z7895a99ad3874")
						%td 線上金流單號
						%td
							%input(name="payrefno5" value="12-44-85-666")
					%tr
						%td(colspan="4" ) 其他說明
					%tr
						%td(colspan="4")
							%textarea(row="4" name="remark" value="N/A")
			%hr
			.btn
				%a.btn.confirm#confirmBtn(type="submit" onclick="onChangeClick();") 訂房轉入住
				%a.btn.confirm#confirmBtn(type="submit" onclick="onCheckInClick();") 訂房
				%a.btn.release#releaseBtn(onclick="window.history.back();") 取消
			
        