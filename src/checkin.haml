		= Haml::Engine.new(File.read('src/home/_head.html.haml')).render
	%body
		%form.main(id="infoForm" method="GET")
			%table
				%tbody
					%tr
						%td 飯店代號
						%td
							%input(name="hotelid" value="KCSYS")
						%td 機台代號
						%td
							%input(name="machineid" value="K01")
					%tr
						%td 訂房單號
						%td
							%input(name="rsvno" value="A17123557")
						%td OTA單號
						%td
							%input(name="otano" value="TSC-05504")
					%tr
						%td 入住驗證碼
						%td
							%input(name="authkey" value="BQ17")
						%td 房型代號
						%td
							%input(name="rmtype" value="SS")
					%tr
						%td 房間號碼
						%td
							%input(name="rmno" value="1003")
						%td 住宿期間房價總金額
						%td
							%input(type="number" min="0" name="totamt" value="2000")
					%tr
						%td 已付訂金金額
						%td
							%input(type="number" min="0" name="deposit" value="0")
