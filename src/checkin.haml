						%td
							%input(name="tel" value="02-2177-5463")
					%tr
						%td 住客行動電話
						%td
							%input(name="mobile" value="0912-345-678")
						%td 性別
						%td
							%label
								%input(type="radio" name="sex" value="0" checked)
								%span 男
							%label
								%input(type="radio" name="sex" value="1")
								%span 女
					%tr
						%td 出生年月日
						%td
							%input(type="date" name="birth" value="1999-10-10")
						%td 證件號碼
						%td
							%input(name="idno" value="A123456789")
					%tr
						%td 國籍
						%td
							%input(name="orig" value="Taiwan")
						%td 地址
						%td
							%input(name="address" value="台北市內湖區基湖路18號")
					%tr
						%td 付款代碼
						%td
							%input(name="payid" value="123-456-789")
						%td 付款名稱
						%td
							%input(name="payname" value="1200")
					%tr
						%td 付款金額
						%td
							%input(type="number" min="0" name="payamt" value="0")
